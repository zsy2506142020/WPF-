<Window x:Class="algorithm_implement.CriticalPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:algorithm_implement"
        mc:Ignorable="d"
        Title="CriticalPathWindow" Height="620" Width="800">
    <Grid x:Name="CriticalPathGrid" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="关键路径" Grid.Column="1" Grid.Row="0" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DataGrid x:Name="VexDataGrid" AutoGenerateColumns="True" Grid.Column="2" Grid.Row="1" Margin="5"/>
        <DataGrid x:Name="EdgeDataGrid" AutoGenerateColumns="True" Grid.Column="3" Grid.Row="1" Margin="5"/>
    </Grid>
</Window>
